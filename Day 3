2.leader

#include <stdio.h>
void main()
{
    int n;
    printf("enter a array size:");
    scanf("%d",&n);
    int a[n];
    for(int i=0;i<n;i++)
    {
        scanf("%d",&a[i]);
    }
    for(int i=0;i<n;i++)
    {
        int flag=0,max=a[i];
        for(int j=i+1;j<n;j++)
        {
            if(max<=a[j])
            {
                flag=1;
            }
        }
    if(flag!=1)
    {
        printf("%d ",max);
    }
    }
}
