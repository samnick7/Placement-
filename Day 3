1.sort 0,1,2  o/p:- 0 1 2.
  
#include <stdio.h>
void main()
{
    int n,count=0,count1=0,count2=0;
    printf("enter a array size:");
    scanf("%d",&n);
    int a[n];
    for(int i=0;i<n;i++)
    {
        scanf("%d",&a[i]);
    }
    for(int i=0;i<n;i++)
    {
        if(a[i]==0)
        {
            count++;
        }
        else if(a[i]==1)
        {
            count1++;
        }
        else
        {
            count2++;
        }
    }
    for(int i=0;i<count;i++)
    {
        printf("%d ",a[i]=0);
    }
    for(int i=0;i<count1;i++)
    {
        printf("%d ",a[i]=1);
    }
    for(int i=0;i<count2;i++)
    {
        printf("%d ",a[i]=2);
    }
}
